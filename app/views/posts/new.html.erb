<h2 class="text-center">新增影评</h2>

<div class="col-md-4 col-md-offset-4">
  <%= simple_for_for |@movie,@comment| do |f| %>
    <div class="form-group">
      <%= f.input :content, input_html: { class: "form-control"}%>
    </div>
    <div class="form-actions">
      <%= f.submit "写好了", disable_with: "提交中...", class: "btn btn-default"%>
    </div>
  <% end %>

</div>
