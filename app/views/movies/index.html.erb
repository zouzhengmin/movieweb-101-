<div class="col-md-12">

  <% if current_user %>
  <div class="movie">
    <%= link_to("新增电影", new_movie_path, class:"btn btn-primary pull-right") %>
  </div>
  <% end %>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>电影</td>
        <td>简介</td>
        <td>发布者</td>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
      <tr>
        <td>#</td>
        <td><%= link_to(movie.title, movie_path(movie)) %></td>
        <td><%= movie.description %></td>
        <td><%= movie.user.email%></td>
        <td>
          <% if current_user && current_user == movie.user %>
          <%= link_to("编辑", edit_movie_path(movie), class:"btn btn-sm btn-default") %>
          <%= link_to("删除", movie_path(movie),      class:"btn btn-sm btn-default",
                        method: :delete, data: { confirm: "确定要删除吗？" }) %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
