
  <%= form_for @movie do |f| %>

  <div class="form-group">
    <div class="form-group string optional">
      <%= f.label "电影名", :class => "string optional control-label" %>
      <%= f.text_field :title, :class => "string optional form-control" %>
    </div>
    <div>
      <%= f.label "描述", :class => "string optional control-label" %>
      <%= f.text_area :description, :class => "string optional form-control" %>
    </div>
  </div>

  <%= f.submit "写好了", class: "btn btn-primary", data: {disable_with: "提交中..."}%>
  <% end %>
