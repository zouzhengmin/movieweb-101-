<div class="col-md-4 col-md-offset-4">
<h2>新增电影</h2>

<hr>

<% if @movie.errors.any? %>
<% @movie.errors.full_messages.each do |msg|%>
<%= msg %>
<% end %>
<% end %>

<%= form_for @movie do |f| %>
电影名称
<br>
<%= f.text_field :title %>
<br>
电影简介
<br>
<%= f.text_area :description %>
<br>

<%= f.submit "写好了！", :disable_with => '提交中' %>
<%end%>

</div>
