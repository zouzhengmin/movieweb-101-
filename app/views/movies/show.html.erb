<div class="col-md-12">
  <div class="movie">

    <span class= "pull-right">
      <% if current_user && current_user.is_member_of?(@movie) %>
        <label class="label label-success">我是群组成员</label>
        <%= link_to("退出群组", quit_movie_path(@movie), method: :post, class:"btn btn-primary")%>
      <% else %>
        <label class="label label-warning">还不是群组成员</label>
        <%= link_to("加入群组", join_movie_path(@movie), method: :post, class:"btn btn-primary")%>
      <% end %>
    </span>

    <%= link_to("写个评论", new_movie_comment_path(@movie), class:"btn btn-default pull-right")%>
    <% if current_user && current_user == @movie.user %>
    <%= link_to("编辑", edit_movie_path(@movie), class:"btn btn-primary pull-right") %>
  </div>
  <% end %>

  <h2> <%= @movie.title %></h2>
  <p> <%= @movie.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th>影评内容</th>
        <th>发布者</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content%></td>
        <td><%= comment.user.email%></td>
        <td><%= comment.created_at%></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @comments %>
  </div>

</div>
